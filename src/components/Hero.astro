<section class="relative min-h-[100vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-cream via-cream to-sage-50 pt-20">
  <!-- Floating background elements -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-coral-200/20 rounded-full blur-3xl float-element" data-speed="0.5"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-sage-200/20 rounded-full blur-3xl float-element" data-speed="0.3"></div>
  <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-lavender/10 rounded-full blur-3xl float-element" data-speed="0.7"></div>
  
  <!-- Paint splatter decorations -->
  <svg class="absolute top-32 right-20 w-24 h-24 text-coral-300/30 animate-float" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
    <circle cx="20" cy="30" r="15" fill="currentColor" />
    <circle cx="70" cy="25" r="20" fill="currentColor" />
    <circle cx="80" cy="70" r="18" fill="currentColor" />
  </svg>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Eyebrow text -->
    <div class="inline-flex items-center space-x-2 bg-white/80 backdrop-blur-sm rounded-full px-6 py-2 mb-8 shadow-soft reveal">
      <span class="w-2 h-2 bg-coral-400 rounded-full animate-pulse"></span>
      <span class="text-sm font-medium text-sage-700">Connecticut's Creative Bookkeeper</span>
    </div>
    
    <!-- Main headline -->
    <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 reveal">
      <span class="text-charcoal">Bookkeeping for</span>
      <br />
      <span class="text-gradient">Artists Who'd Rather</span>
      <br />
      <span class="text-charcoal">Be Creating</span>
    </h1>
    
    <!-- Subheadline -->
    <p class="text-lg sm:text-xl md:text-2xl text-charcoal/80 max-w-3xl mx-auto mb-10 leading-relaxed reveal">
      Professional bookkeeping that understands the creative life. From tracking project income to 
      finding every deduction, I help Connecticut artists focus on creating while I handle the numbers.
    </p>
    
    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12 reveal">
      <button class="btn-primary group">
        <span class="relative z-10">Book Your Free Artist Consultation</span>
        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
      
      <a href="#calculator" class="btn-secondary">
        <span class="text-coral-500">ðŸŽ¨</span>
        <span class="ml-2">Try Studio Expansion Calculator</span>
      </a>
    </div>
    
    <!-- Trust indicators -->
    <div class="flex flex-wrap items-center justify-center gap-8 text-sm text-charcoal/60 reveal">
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5 text-sage-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <span>5.0 rating from 50+ artists</span>
      </div>
      
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5 text-sage-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>$3K+ average tax savings</span>
      </div>
      
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5 text-sage-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>Serving CT artists since 2015</span>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-center reveal">
    <div class="text-xs text-charcoal/40 mb-2">Scroll to explore</div>
    <div class="w-6 h-10 border-2 border-charcoal/20 rounded-full relative">
      <div class="w-1.5 h-1.5 bg-sage-400 rounded-full absolute top-2 left-1/2 transform -translate-x-1/2 animate-bounce"></div>
    </div>
  </div>
</section>